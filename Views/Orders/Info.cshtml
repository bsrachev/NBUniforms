@model OrderInfoServiceModel

@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)$
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompleated)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsCompleated ? "Compleated" : "Active")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientPhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientAddress)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col" class="col-3">Product</th>
            <th scope="col" class="col-2">Price</th>
            <th scope="col" class="col-2">Size</th>
            <th scope="col" class="col-3">Quantity</th>
            <th scope="col" class="col-2">Total Price</th>
            <th></th>
        </tr>
    </thead>
</table>
@foreach (var product in Model.OrderProducts)
{
    <partial name="_OrderProductsPartial" model="@product" />
}
<div>
    <a asp-controller="Orders" asp-action="Index" class="btn btn-primary">Back</a>
</div>
